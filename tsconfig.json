{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2023"],

    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node16",

    "baseUrl": "./dist",

    "paths": {
      "@/*": ["*"]
    },

    "module": "node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src/**/*"]
}
